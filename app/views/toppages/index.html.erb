<% if logged_in? %>
  <h1 class="text-center">商品一覧</h1>
    <div class="row">
      <div class="col-sm-6 offset-sm-5">
        <div class="mb-3">
          <%= form_with url: search_items_path, method: :get, local: true do |f| %>
            <%= f.text_field :name %>
            <%= f.submit '検索' %>
          <% end %>
        </div>
      </div>
    </div>
  <%= render 'items/items', items: @items %>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded main-container">
    <div class="text-center text-white">
      <h2>無添加食品レビューサイト</h2><br>
      <h1>「MuTenKa」</h1>
      <%= link_to '新規登録はこちら', signup_path, class: 'btn btn-light' %>
    </div>
  </div>
<% end %>